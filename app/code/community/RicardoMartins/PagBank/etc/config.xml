<?xml version="1.0"?>
<config>
    <modules>
        <RicardoMartins_PagBank>
            <version>4.10.0</version>
        </RicardoMartins_PagBank>
    </modules>
    <default>
        <payment>
            <ricardomartins_pagbank>
                <document_from>taxvat</document_from>
                <placeorder_button>#onestepcheckout-place-order-button,.btn-checkout,#payment-buttons-container .button</placeorder_button>
                <hash_email_active>0</hash_email_active>
                <hide_order_items>0</hide_order_items>
                <stc_mirror>1</stc_mirror>
                <jsdelivr_enabled>0</jsdelivr_enabled>
                <jsdelivr_minify>0</jsdelivr_minify>
                <debug>1</debug>
            </ricardomartins_pagbank>
            <ricardomartins_pagbank_cc>
                <active>1</active>
                <title>Cartão de Crédito - PagBank</title>
                <sort_order>1</sort_order>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <payment_action>order</payment_action>
                <model>ricardomartins_pagbank/method_cc</model>
                <soft_descriptor>Compra Via PagBank</soft_descriptor>
                <cc_3ds>1</cc_3ds>
                <cc_3ds_allow_continue>0</cc_3ds_allow_continue>
            </ricardomartins_pagbank_cc>
            <ricardomartins_pagbank_billet>
                <active>1</active>
                <title>Boleto - PagBank</title>
                <sort_order>2</sort_order>
                <order_status>pending_payment</order_status>
                <allowspecific>0</allowspecific>
                <payment_action>order</payment_action>
                <model>ricardomartins_pagbank/method_billet</model>
                <expiration_time>3</expiration_time>
                <instruction_line_one>Seu pedido só será processado após o pagamento.</instruction_line_one>
                <instruction_line_two>Obrigado pela preferência.</instruction_line_two>
            </ricardomartins_pagbank_billet>
            <ricardomartins_pagbank_pix>
                <active>1</active>
                <title>Pix - PagBank</title>
                <sort_order>3</sort_order>
                <order_status>pending_payment</order_status>
                <allowspecific>0</allowspecific>
                <payment_action>order</payment_action>
                <model>ricardomartins_pagbank/method_pix</model>
                <expiration_time>60</expiration_time>
            </ricardomartins_pagbank_pix>
        </payment>
    </default>
    <global>
        <sales>
            <order>
                <states>
                    <pending_payment>
                        <visible_on_front>1</visible_on_front>
                    </pending_payment>
                </states>
            </order>
        </sales>
        <models>
            <ricardomartins_pagbank>
                <class>RicardoMartins_PagBank_Model</class>
            </ricardomartins_pagbank>
        </models>
        <blocks>
            <ricardomartins_pagbank>
                <class>RicardoMartins_PagBank_Block</class>
            </ricardomartins_pagbank>
        </blocks>
        <helpers>
            <ricardomartins_pagbank>
                <class>RicardoMartins_PagBank_Helper</class>
            </ricardomartins_pagbank>
        </helpers>
        <events>
            <admin_system_config_changed_section_payment>
                <observers>
                    <ricardomartins_pagbank>
                        <class>ricardomartins_pagbank/observer</class>
                        <method>generatePublicKey</method>
                    </ricardomartins_pagbank>
                </observers>
            </admin_system_config_changed_section_payment>
            <sales_order_payment_place_end>
                <observers>
                    <ricardomartins_pagbank>
                        <class>ricardomartins_pagbank/observer</class>
                        <method>salesOrderPaymentPlaceEnd</method>
                    </ricardomartins_pagbank>
                </observers>
            </sales_order_payment_place_end>
            <sales_model_service_quote_submit_failure>
                <observers>
                    <ricardomartins_pagbank>
                        <class>ricardomartins_pagbank/observer</class>
                        <method>salesModelServiceQuoteSubmitFailure</method>
                    </ricardomartins_pagbank>
                </observers>
            </sales_model_service_quote_submit_failure>
        </events>
    </global>
    <frontend>
        <routers>
            <ricardomartins_pagbank>
                <use>standard</use>
                <args>
                    <module>RicardoMartins_PagBank</module>
                    <frontName>pagbank</frontName>
                </args>
            </ricardomartins_pagbank>
            <ricardomartins_pagseguro>
                <args>
                    <modules>
                        <RicardoMartins_PagBank before="RicardoMartins_PagSeguro">RicardoMartins_PagBank</RicardoMartins_PagBank>
                    </modules>
                </args>
            </ricardomartins_pagseguro>
            <ricardomartins_pagseguro>
                <use>standard</use>
                <args>
                    <module>RicardoMartins_PagBank</module>
                    <frontName>pseguro</frontName>
                </args>
            </ricardomartins_pagseguro>
        </routers>
        <layout>
            <updates>
                <ricardomartins_pagbank>
                    <file>ricardomartins/pagbank/payments.xml</file>
                </ricardomartins_pagbank>
            </updates>
        </layout>
        <translate>
            <modules>
                <ricardomartins_pagbank>
                    <files>
                        <default>RicardoMartins_PagBank.csv</default>
                    </files>
                </ricardomartins_pagbank>
            </modules>
        </translate>
        <events>
            <payment_info_block_prepare_specific_information>
                <observers>
                    <ricardomartins_pagbank>
                        <type>model</type>
                        <class>ricardomartins_pagbank/observer</class>
                        <method>paymentInfoBlockPrepareSpecificInformation</method>
                    </ricardomartins_pagbank>
                </observers>
            </payment_info_block_prepare_specific_information>
            <controller_action_layout_load_before>
                <observers>
                    <ricardomartins_pagbank_moip>
                        <type>model</type>
                        <class>ricardomartins_pagbank/observer</class>
                        <method>addMoipCompatibility</method>
                    </ricardomartins_pagbank_moip>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <payment_info_block_prepare_specific_information>
                <observers>
                    <ricardomartins_pagbank>
                        <type>model</type>
                        <class>ricardomartins_pagbank/observer</class>
                        <method>paymentInfoBlockPrepareSpecificInformation</method>
                    </ricardomartins_pagbank>
                </observers>
            </payment_info_block_prepare_specific_information>
        </events>
        <translate>
            <modules>
                <ricardomartins_pagbank>
                    <files>
                        <default>RicardoMartins_PagBank.csv</default>
                    </files>
                </ricardomartins_pagbank>
            </modules>
        </translate>
    </adminhtml>
    <crontab>
        <jobs>
            <ricardomartins_pagbank_pix_cancel>
                <schedule><cron_expr>*/30 * * * *</cron_expr></schedule>
                <run>
                    <model>ricardomartins_pagbank/cron::cancelPixOrdersUnpaid</model>
                </run>
            </ricardomartins_pagbank_pix_cancel>
        </jobs>
    </crontab>
</config>